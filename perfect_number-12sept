int isPerfectNumber(long long N) {
        // code here
        if(N==1)
        {
        return 0;
        }
        int sum=1;
        for(int i=2;i<=sqrt(N);i++)
        {
            if(N%i==0)
            {
                sum=sum+i+N/i;
            }
        }
        if(sum==N)
        {
          return 1;  
        }
        
        return 0;
